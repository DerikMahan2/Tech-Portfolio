@page
@model GPFC_Management.Pages.Matches.DetailsModel

@{
    ViewData["Title"] = "Match Details";
}

<h1>Match Details</h1>

<div>
    <h4>Match</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Match Time
        </dt>
        <dd class="col-sm-10">
            @Model.Match.MatchTime.ToString("g")
        </dd>
        <dt class="col-sm-2">
            Home Team
        </dt>
        <dd class="col-sm-10">
            @Model.Match.HomeTeam.TeamName
        </dd>
        <dt class="col-sm-2">
            Away Team
        </dt>
        <dd class="col-sm-10">
            @Model.Match.AwayTeam.TeamName
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Match.MatchId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
