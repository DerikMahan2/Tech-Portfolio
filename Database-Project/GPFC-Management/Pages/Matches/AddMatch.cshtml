@page
@model AddMatchModel

@{
    ViewData["Title"] = "Add Match";
}

<h1>Create</h1>

<h4>Match</h4>
<hr>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div clas="form-group">
                <label asp-for="Match.HomeTeamId" class="control-label">Home Team</label>
                <select asp-for="Match.HomeTeamId" asp-items="Model.Teams" class="form-control">
                    <option value="">--Select Team--</option>
                </select>
                <span asp-validation-for="Match.HomeTeamId" class="text-danger"></span>
            </div>
            <div clas="form-group">
                <label asp-for="Match.AwayTeamId" class="control-label">Away Team</label>
                <select asp-for="Match.AwayTeamId" asp-items="Model.Teams" class="form-control">
                    <option value="">--Select Team--</option>
                </select>
                <span asp-validation-for="Match.AwayTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.MatchTime" class="control-label">Match Time</label>
                <input asp-for="Match.MatchTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="Match.MatchTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Match" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Matches/Index">Back to Matches</a>
</div>

