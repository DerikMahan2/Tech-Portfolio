@page "{id:int?}"
@model GPFC_Management.Pages.Teams.DeletePlayerModel

@{
    ViewData["Title"] = "Delete Player";
}

<h1>Delete</h1>
<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="PlayerId" class="control-label"></label>
                <select asp-for="PlayerId" asp-items="Model.players" class="form-control">
                    <option value="">-- Select Course --</option>
                </select>
                <span asp-validation-for="PlayerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete Player" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}