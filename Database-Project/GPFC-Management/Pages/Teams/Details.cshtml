@page
@model DetailsModel

<h2>Team Details</h2>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Team Name</dt>
        <dd class="col-sm-10">@Model.Team.TeamName</dd>
        <dt class="col-sm-2">Coach Name</dt>
        <dd class="col-sm-10">@Model.Team.CoachName</dd>
        <dt class="col-sm-2">Division</dt>
        <dd class="col-sm-10">@Model.Team.Division</dd>
    </dl>
</div>
<div>
    <h4>Players</h4>
    <hr>
    <ul class="list-unstyled">
        @foreach (var player in Model.Team.Players)
        {
            <li class="d-flex justify-content-between align-items-center">
                <span>@player.Name</span>
                <form method="post" class="mb-0">
                    <input type="hidden" name="PlayerIdToDelete" value="@player.PlayerId" />
                    <button type="submit" asp-page-handler="DeletePlayer" asp-route-id="@Model.Team.TeamId"
                        class="btn btn-danger btn-sm">Delete Player</button>
                </form>
            </li>
        }
    </ul>
</div>

<div class="mt-4">
    <a asp-page="./AddPlayer" asp-route-teamId="@Model.Team.TeamId" class="text-primary">Add a new player to this
        team</a>
</div>

<hr>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Team.TeamId" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to Teams</a>
</div>
